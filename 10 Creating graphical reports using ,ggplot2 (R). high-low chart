ggplot(data, aes(x = Country)) +
  geom_linerange(
    aes(ymin = Cost_of_Living_Index, ymax = Safety_Index),
    color = "red",
    size = 1
  ) +
  geom_point(aes(y = Safety_Index), color = "PINK", size = 3) +
  geom_point(aes(y = Cost_of_Living_Index), color = "blue", size = 3) +
  labs(
    title = "Highâ€“Low Chart: Safety Index vs Cost of Living Index",
    x = "Country",
    y = "Index Value"
  ) +
  theme_minimal() +
  theme(axis.text.x = element_text(angle = 45, hjust = 1))
